@using EntityLayer.Concretes
@model Blog

@{
    ViewData["Title"] = "BlogAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<form asp-action="BlogAdd" asp-controller="Blog" method="POST">

    <div class="form-group">
        <label for="BlogTitle">Blog Basliqi</label>
        <input type="text" class="form-control" id="BlogTitle" name="BlogTitle" placeholder="Blog Basliqi">
        <!-- Validation Message -->
        <span asp-validation-for="BlogTitle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="BlogContent">Blog Metni</label>
        <textarea class="form-control" id="BlogContent" name="BlogContent" rows="15"></textarea>
        <!-- Validation Message -->
        <span asp-validation-for="BlogContent" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="BlogCreateDate">Olusdurulma Tarihi</label>
        <input type="date" class="form-control" id="BlogCreateDate" name="BlogCreateDate">
    </div>

    <div class="form-group">

        <label for="BlogImage">Blog Sekli</label>
        <input type="text" class="form-control" id="BlogImage" name="BlogImage">
        <!-- Validation Message -->
        <span asp-validation-for="BlogImage" class="text-danger"></span>
    </div>

    <div class="form-group">

        <label for="BlogThumbnailImage">Blog Kicik Sekli</label>
        <input type="text" class="form-control" id="BlogThumbnailImage" name="BlogThumbnailImage">
        <!-- Validation Message -->
        <span asp-validation-for="BlogThumbnailImage" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label for="BlogStatus">Durum</label>
        <select class="form-control" id="BlogStatus" name="BlogStatus">
            <option value="true">Aktif</option>
            <option value="false">Pasiv</option>
        </select>
        <!-- Validation Message -->
        <span asp-validation-for="BlogStatus" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="CategoryID">Kategori</label>
        <!-- With Input -->
        <input type="text" class="form-control" id="CategoryID" name="CategoryID" />
        <!-- Validation Message -->
        <span asp-validation-for="CategoryID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Gonder</button>

</form>