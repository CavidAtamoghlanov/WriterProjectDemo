@using EntityLayer.Concretes
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yazarin Bloglari</h1>


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog Bashliqi</th>
        <th>Olusdurulma tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Duzenle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BlogID</td>
            <td>@item.BlogTitle</td>
            <td>@item.BlogCreateDate</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.Writer.WriterStatus</td>
            <td><a href="" class="btn btn-danger">Sil</a> </td>
            <td><a href="" class="btn btn-warning">Duzenle</a> </td>
        </tr>

    }


</table>

<a href="#" class   ="btn btn-info">Yeni Blog Olustur</a>