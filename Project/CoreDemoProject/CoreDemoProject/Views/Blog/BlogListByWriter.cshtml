@using EntityLayer.Concretes
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yazarin Bloglari</h1>


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog Bashliqi</th>
        <th>Olusdurulma tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Duzenle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.BlogID</th>
            <td>@item.BlogTitle</td>
            <td>@(((DateTime)item.BlogCreateDate).ToString("dd-MMMM-yyy"))</td>
            <td >@item.Category.CategoryName</td>
            <td>@item.BlogStatus</td>
            <td><a href="/Blog/DeleteBlog/@item.BlogID" class="btn btn-danger">Sil</a> </td>
            <td><a href="/Blog/EditBlog/@item.BlogID" class="btn btn-warning">Duzenle</a> </td>
        </tr>

    }


</table>

<a href="/Blog/BlogAdd" class   ="btn btn-info">Yeni Blog Olustur</a>