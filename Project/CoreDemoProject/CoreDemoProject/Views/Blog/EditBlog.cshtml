@model EntityLayer.Concretes.Blog
@{
    ViewData["Title"] = "EditBlog";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>EditBlog</h1>


<form asp-action="EditBlog" method="POST" asp-controller="Blog">

    <div class="form-group">
        <label for="BlogID">Blog Id</label>
        <input type="text"  value="@Model.BlogID" class="form-control" id="BlogID" name="BlogID" placeholder="Blog Basliqi">
        <!-- Validation Message -->
        <span asp-validation-for="BlogTitle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="WriterID">Blog WriterID </label>
        <input type="text"  value="@Model.WriterID" class="form-control" id="WriterID" name="WriterID" placeholder="Blog Basliqi">
        <!-- Validation Message -->
        <span asp-validation-for="BlogTitle" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label for="BlogTitle">Blog Basliqi</label>
        <input type="text" value="@Model.BlogTitle" class="form-control" id="BlogTitle" name="BlogTitle" placeholder="Blog Basliqi">
        <!-- Validation Message -->
        <span asp-validation-for="BlogTitle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="BlogContent">Blog Metni</label>
        <textarea class="form-control" id="BlogContent" name="BlogContent" rows="15">@Model.BlogContent</textarea>
        <!-- Validation Message -->
        <span asp-validation-for="BlogContent" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="BlogCreateDate">Olusdurulma Tarihi</label>
        <input type="date" value="@Model.BlogCreateDate" class="form-control" id="BlogCreateDate" name="BlogCreateDate">
    </div>

    <div class="form-group">

        <label for="BlogImage">Blog Sekli</label>
        <input type="text" value="@Model.BlogImage" class="form-control" id="BlogImage" name="BlogImage">
        <!-- Validation Message -->
        <span asp-validation-for="BlogImage" class="text-danger"></span>
    </div>

    <div class="form-group">

        <label for="BlogThumbnailImage">Blog Kicik Sekli</label>
        <input type="text" value="@Model.BlogThumbnailImage" class="form-control" id="BlogThumbnailImage" name="BlogThumbnailImage">
        <!-- Validation Message -->
        <span asp-validation-for="BlogThumbnailImage" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label for="BlogStatus">Durum</label>
        <select class="form-control" id="BlogStatus" name="BlogStatus">
            <option value="true">Aktif</option>
            <option value="false">Pasiv</option>
        </select>
        <!-- Validation Message -->
        <span asp-validation-for="BlogStatus" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="CategoryID">Kategori</label>
        <!-- With Select -->
        @{

            List<SelectListItem> categoryList = ViewBag.cv;
        }
        <select asp-for="CategoryID" asp-items="categoryList" class="form-control"></select>

        <!-- Validation Message -->
        <span asp-validation-for="CategoryID" class="text-danger"></span>

    </div>

    <button type="submit" class="btn btn-primary">Gonder</button>




</form>








