@using CoreDemoProject.Models
@model AddProfileImage
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<form asp-action="WriterAdd" asp-controller="Writer" method="post" enctype="multipart/form-data">
   


    <div class="form-group">
        <label for="exampleInputName1">Name</label>
        <input type="text" class="form-control"  name="WriterName" id="exampleInputName1" placeholder="Name">
        <!-- Validation Error -->
        <span asp-validation-for="WriterName" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label for="exampleInputEmail3">Email address</label>
        <input type="email" class="form-control"  name="WriterMail" id="exampleInputEmail3" placeholder="Email">
        <!-- Validation Error -->
        <span asp-validation-for="WriterMail" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label for="exampleInputPassword4">Password</label>
        <input type="password" class="form-control"  id="exampleInputPassword4" name="WriterPassword" placeholder="Password">
        <!-- Validation Error -->
        <span asp-validation-for="WriterPassword" class="text-danger"></span>
    </div>





    <div class="form-group">
        <label>Image upload</label>
      
        <input type="file" name="WriterImage"/>
        <!-- Validation Error -->
        <span asp-validation-for="WriterImage" class="text-danger"></span>
    </div>





    <div class="form-group">
        <label for="exampleTextarea1">About</label>
        <textarea class="form-control" id="exampleTextarea1" name="WriterAbout" rows="10"></textarea>
        <!-- Validation Error -->
        <span asp-validation-for="WriterAbout" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-gradient-primary mr-2">Submit</button>
</form>